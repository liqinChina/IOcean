<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    
    >

    <ImageView
        android:id="@+id/imageView_self_info"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/aa" />

    <TextView
        android:id="@+id/textView_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_self_info"
        android:layout_centerHorizontal="true"
        android:text="昵称" />

    <TextView
        android:id="@+id/textView_self_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_screen_name"
        android:layout_below="@+id/textView_screen_name"
        android:text="地址" />

    <TextView
        android:id="@+id/textView_self_status_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_self_location"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="32dp"
        android:text="3" />

    <TextView
        android:id="@+id/textView_self_following_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_self_friends_count"
        android:layout_alignBottom="@+id/textView_self_friends_count"
        android:layout_toRightOf="@+id/textView_self_location"
        android:text="4004" />

    <TextView
        android:id="@+id/textView_big_repost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_self_status_count"
        android:layout_below="@+id/textView_self_status_count"
        android:layout_marginTop="14dp"
        android:text="微博数" />

    <TextView
        android:id="@+id/textView_tome_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_big_comment"
        android:layout_alignBottom="@+id/textView_big_comment"
        android:layout_alignLeft="@+id/textView_self_following_count"
        android:text="关注数" />

    <TextView
        android:id="@+id/textView_tome_usertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_tome_username"
        android:layout_alignBottom="@+id/textView_tome_username"
        android:layout_alignRight="@+id/textView_self_topic_count"
        android:text="话题数" />

    <TextView
        android:id="@+id/textView_self_topic_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_big_repost"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:text="00" />

    <TextView
        android:id="@+id/textView_self_friends_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_self_status_count"
        android:layout_alignBottom="@+id/textView_self_status_count"
        android:layout_alignLeft="@+id/imageView_self_info"
        android:text="5000" />

    <TextView
        android:id="@+id/textView_big_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_big_repost"
        android:layout_alignBottom="@+id/textView_big_repost"
        android:layout_alignLeft="@+id/textView_self_friends_count"
        android:text="粉丝数" />

</RelativeLayout>